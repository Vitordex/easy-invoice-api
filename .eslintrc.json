{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "security"
    ],
    "extends": [
        "plugin:security/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}